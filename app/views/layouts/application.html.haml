!!!
%html
  %head
    %title Chrisbim
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrapper
      #page
        #logo
          = link_to image_tag('logo.gif'), root_url
        #navbar
          = link_to 'home', pages_url
          = link_to 'new', new_page_url
        #content
          = yield
        #footer
          &copy; Chris Beard Photography 2011 
    #dump
      %p= current_user.inspect      
      %p= current_user_session.inspect
      - if current_user
        = link_to 'Logout', logout_path
      - else
        = link_to 'Login', login_path
      %p= params.inspect
