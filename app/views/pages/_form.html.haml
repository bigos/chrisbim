= form_for(@page) do |f|
  - if @page.errors.any?
    #error_explanation
      %h2
        = pluralize(@page.errors.count, "error")
        prohibited this page from being saved:
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
  = f.cktext_area(:content,  :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Easy')
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .actions
    = f.submit
